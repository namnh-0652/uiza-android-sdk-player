<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/uiza_logo_512" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_65"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <uiza.v4.helper.view.UizaActionBar
                android:id="@+id/uiza_action_bar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="@dimen/w_250"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/black_65">

            <vn.uiza.views.placeholderview.lib.placeholderview.PlaceHolderView
                android:id="@+id/drawerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </FrameLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
